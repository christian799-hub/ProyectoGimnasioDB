{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Gimnasio.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Gimnasio.Api/bin/Debug/net8.0/Gimnasio.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Gimnasio.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}